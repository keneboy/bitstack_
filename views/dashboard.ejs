<%- include ('partials/dashboardHeader.ejs') %> 
  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper" style="background-color: #121d33 !important; background-image: url(images/hero-gradient.svg); background-position-y: bottom; background-repeat: no-repeat; background-size: cover;">
      <!-- Sidebar -->
      <%- include ('partials/dashboardSidetab.ejs') %>

     
      <div id="content-wrapper" class="d-flex flex-column">
     
        <div id="content">
       
      <%- include ('partials/dashboardNavTab.ejs') %>
       

          <div class="container-fluid">
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
              <a href="/mining" class="btn btn-sm btn-primary shadow-sm"
                ><i class="fas fa-eye fa-sm text-white-50"></i> View plans</a
              >
            </div>

            <div class="row">

              <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-primary text-uppercase mb-1"
                        >
                          Available Balance
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                         
                         <%if(runningTotalAmt){%>
                            $<%=runningTotalAmt%>
                        <%}else{%>
                          $000
                        <%}%>

                        </div>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-warning text-uppercase mb-1"
                        >
                          Bonus Balance
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                         
                          <%if(locals.userDataInput){%>
                            <% Object.values(userDataInput).forEach(function(res) {%>
                      

                        $<%=res.bonus %>


                        
                    <%})%>
                    <%}%>

                        </div>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                          Completed Plans
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                          <%if(completedCounter){%>
                            <%=completedCounter%>
                        <%}else{%>
                          0
                          <%}%>
                        </div>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-info text-uppercase mb-1"
                        >
                          Running plans
                        </div>
                        <div class="row no-gutters align-items-center">
                          <div class="col-auto">
                            <div
                              class="h5 mb-0 mr-3 font-weight-bold text-gray-800"
                            >
                            <%if(runningCounter){%>
                                <%=runningCounter%>
                            <%}else{%>
                              0
                            <%}%>
                            </div>
                          </div>
                          <!-- <div class="col">
                            <div class="progress progress-sm mr-2">
                              <div
                                class="progress-bar bg-info"
                                role="progressbar"
                                style="width: 0%"
                                aria-valuenow="00"
                                aria-valuemin="0"
                                aria-valuemax="100"
                              ></div>
                            </div>
                          </div> -->
                        </div>
                      </div>
                      <div class="col-auto">
                        <i
                          class="fas fa-clipboard-list fa-2x text-gray-300"
                        ></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-warning text-uppercase mb-1"
                        >
                          Pending Requests
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                          <%if(pendingCounter){%>
                            <%=pendingCounter%>
                        <%}else{%>
                          0
                        <%}%>
                        </div>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>


          <div class="container-fluid">
            <p id="www"  hidden>Referal link copied to clipboard</p>
            <p>Your Referal Link: </p>
            <div class="row">
              <div class="col-xl-9 col-md-9 col-9">
                <%if(referalID){%>
                  <input class="btn btn-sm btn-primary" value='https://mining-blockchain.com/login/<%=referalID%>'  id="myInput" type="text"  style="width: 100%; "/>
                
                <%}%>
              </div>
              
            
              <div class="col-xl-3 col-md-3 col-3">
                <button class="btn btn-sm btn-primary" style="width: 100%;" onclick="copyLink()" title="Copied to clipboard">copy  </button>
                <script>
                  function copyLink(){
                    var copyText = document.getElementById("myInput");
                    copyText.select();
                    copyText.setSelectionRange(0,9999);
                    document.execCommand("copy")

                    var success2 = document.getElementById("www").innerText
                    if (document.getElementById("www").innerText !== "") {
                    swal("", `${success2}`, "success")
                    }
                  
                  }
                </script>


              </div>
            </div>
          </div>

        </div>
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto"> 
              <span>Copyright &copy; Mining.Blockchain.com 2021</span>
            </div>
          </div>
        </footer>
      </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

   

   
<%- include ('partials/dashboardFooter.ejs') %> 